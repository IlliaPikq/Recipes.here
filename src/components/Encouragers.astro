---
const encouragersText = [
	{
		title: 'Dont know what to eat today?',
		talk: 'Not for long. Just visit Recipes page'
	},
	{
		title: 'You like to experiment?',
		talk: "Thats great now you can cook something you've never cooked before, just checkout Recipes page"
	}
]
    
    
---

<div class="encouragers">
        {encouragersText.map(text => {
            return (
            <a class="encouragers_block" href="/recipes">
            <h1>{text.title}</h1>
            <p>{text.talk}</p>
             <span class="arow">---></span>
            </a>
            )
        })}
</div>

<style>

    a, a:visited {
        color: inherit;
        text-decoration: none;
    }

    .encouragers {
		display: flex;
		height: fit-content;
		flex-wrap: wrap;
		gap: .5em;
	}

	.encouragers_block {
		position: relative;
		flex: 1;
		min-width: 300px;
		padding: min(5vw, 3em) min(3vw, 2em);
		border-radius: 5px;
		background-color: #141414;
	}

	.arow {
		position: absolute;
		top: .5rem;
		right: .5em;
	}
</style>