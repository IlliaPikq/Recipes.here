---
import Layout from '@layouts/Layout.astro';
import Card from '@components/Card.astro';
import Encouragers from '@components/Encouragers.astro';

---

<Layout title="Welcome to Astro.">
	<main>
		<div class="hero">
			<h3>Want to discover new ricepes?</h3>
			<h1>RICEPES.HERE</h1>
		</div>
		<Encouragers/>
	</main>
</Layout>

<style>
	.hero {
		padding-block: 5em;
		margin: 0 auto;
		text-align: center;
		font-size: 2rem;
	}

	h1, h3, p {
		margin: 0;
		line-height: 1.3;
	}

	.class {
		display: grid;
}
</style>
