---
import Layout from '@layouts/Layout.astro';
import Card from '@components/Card.jsx';
import Encouragers from '@components/Encouragers.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="hero">
			<h3>Want to discover new ricepes?</h3>
			<h1>RICEPES.HERE</h1>
		</div>
		<Encouragers/>
	</main>
</Layout>

<style>
	.hero {
		margin: 0 auto;
		text-align: center;
		font-size: max(1em, 2.75vw);
		margin-bottom: 2em;
	}

	h1, h3, p {
		margin: 0;
		line-height: 1.3;
	}

</style>